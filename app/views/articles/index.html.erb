<h1>Articles Listing Page</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="5">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td>|</td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td>|</td>
            <td><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new article', new_article_path %></p>
<p><%= link_to 'Back to home page', root_path %></p>