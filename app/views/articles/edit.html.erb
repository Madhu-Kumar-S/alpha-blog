<h1>Edit article</h1>

<% if @article.errors.any? %>
    <h2> Errors: </h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @article, local: true, data: { turbo: false } do |f| %>
        <%= f.label :title %>
        </br>
        <%= f.text_field :title %>
        </br>
        <%= f.label :description %>
        </br>
        <%= f.text_area :description %>
        </br>
        <%= f.submit %>
<% end %>

<p><%= link_to 'Back', articles_path %></p>